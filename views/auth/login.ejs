<%-include('../includes/head.ejs')%>
</head>
    <body>
        <%-include('../includes/navigation.ejs')%>
        <main>
            <form action="/auth/login" method="POST">
                <input type="hidden" name="_csrf" value="<%=csrfToken%>">
                <div class="columns">
                    <div class="column is-one-third is-offset-one-third">
                        <div class="field">
                            <label class="label">Email</label>
                            <p class="control has-icons-left">
                            <input class="input <%=typeof validationErrors != 'undefined' && validationErrors.find(e => e.param === 'email') ? 'is-danger' : ''%>" type="email" name="email" value="<%=inputs.email%>">
                            <span class="icon is-small is-left">
                                <i class="far fa-envelope"></i>
                            </span>
                            </p>
                        </div>             
                    </div>
                </div>
                <div class="columns">
                    <div class="column is-one-third is-offset-one-third">
                        <div class="field">
                            <label class="label">Password</label>
                            <p class="control has-icons-left">
                            <input class="input <%=typeof validationErrors != 'undefined' && validationErrors.find(e => e.param === 'password') ? 'is-danger' : ''%>" type="password" name="password" value="<%=inputs.password%>">
                            <span class="icon is-small is-left">
                                <i class="fas fa-key"></i>
                            </span>
                            </p>
                        </div>             
                    </div>
                </div> 
                <div class="columns">
                    <div class="column is-one-third is-offset-one-third">
                        <div class="control">
                            <button class="button is-link">Login</button>
                        </div>         
                    </div>
                </div> 
            </form>
            <div class="columns">
                <div class="column is-one-third is-offset-one-third">
                    <a href="/auth/reset-password">Fotgot your password?</a>
                </div>
            </div>
        </main>
    </body>
</html>